<div><%= flash[:notice]  %></div>
<h1>Candidates List</h1>
<% @candidates.each do |candidate|%>
  <ul>
    <li>
      <%= link_to candidate.name, candidate_path(candidate)%>
      <%= link_to "Edit", edit_candidate_path(candidate)%>
      <%= link_to "Delete", candidate_path(candidate), method: :delete, data: {confirm: "R U SURE? "}%>
    </li>
  </ul>

<% end %>

<%= link_to "Add Candidate", new_candidate_path%>